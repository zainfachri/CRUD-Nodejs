<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>BERITA</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="/send_url.js"></script>
  </head>
  <body>
    <header>
      <a href="/" class="header-logo">ME-DUMB</a>
    </header>
    <div class="top">
      <div class="container-header">
        <a href="/berita" class="new-button">Add Berita</a>
        <a href="/user" class="new-button">Add User</a>
      </div>
    </div>
    <div class="main">
        <ul class="table-body">
          <% news.forEach((item) => { %>
            <li class="list-berita">
              <div class="img-berita">
                <img src="/images/<%= item.image %>" alt="img" width="250px" height="200px">
              </div>
              <h3><%= item.title %></h3>
              <p><%= item.deskripsi %></p>
              
              <div class="item-menu ">
                <form action="/delete/<%= item.id %>" method="post">
                  <input type="submit" value="Hapus">
                </form>
                <a href="/edit/<%= item.id %>">Edit</a>
              </div>
              <div class="clear"></div>
            </li>
          <% }) %>
        </ul>
      </div>
  </body>
</html>